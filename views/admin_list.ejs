<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Admin - Reservas</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h2>Reservas</h2>
      <a href="/" class="btn btn-outline-secondary">Volver a landing</a>
    </div>

    <table class="table table-striped">
      <thead>
        <tr>
          <th>ID</th>
          <th>Cliente</th>
          <th>Fecha</th>
          <th>Hora</th>
          <th>Personas</th>
          <th>Teléfono</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% reservas.forEach(function(r){ %>
          <tr>
            <td><%= r.id %></td>
            <td><%= r.cliente %></td>
            <td><%= r.fecha.toISOString().slice(0,10) %></td>
            <td><%= r.hora.slice(0,5) %></td>
            <td><%= r.personas %></td>
            <td><%= r.telefono || '-' %></td>
            <td>
              <a class="btn btn-sm btn-primary" href="/admin/reservas/edit/<%= r.id %>">Editar</a>
              <form style="display:inline" action="/admin/reservas/delete/<%= r.id %>" method="POST" onsubmit="return confirm('¿Eliminar reserva?');">
                <button class="btn btn-sm btn-danger" type="submit">Eliminar</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
